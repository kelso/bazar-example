<h1>Pridať inzerát</h1>

<% if @ad.errors.any? %>
  <div id="error_explanation">

    <ul>
    <% @ad.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @ad do |f| %>
  <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :description %><br>
  <%= f.text_area :description, size: '50x5' %>
  </p>

  <p>
  <%= f.label :email %><br>
  <%= f.text_field :email %>
  </p>

  <%= f.submit "Odoslať" %>
<% end %>
